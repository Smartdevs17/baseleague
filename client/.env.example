# ============================================
# SoccerLeague Frontend Configuration
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=SoccerLeague
VITE_APP_VERSION=1.0.0
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# ============================================
# WalletConnect Configuration
# ============================================
# Get your Project ID from: https://cloud.walletconnect.com/
# This is REQUIRED for wallet connections
VITE_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# ============================================
# Network Configuration (Ethereum Sepolia)
# ============================================
VITE_CHAIN_ID=11155111
VITE_RPC_URL=https://gateway.tenderly.co/public/sepolia

# ============================================
# Smart Contract Addresses (Ethereum Sepolia)
# ============================================
# ResultsConsumer - Fetches match results from FPL API via Chainlink Functions
VITE_RESULTS_CONSUMER_ADDRESS=0x527b4A46A721806e3b96D65bA1bC29A340A77913

# PredictionContract - Manages bets and settles matches
VITE_PREDICTION_CONTRACT_ADDRESS=0x448bF9Fe833AE50a70530F78aCE71bb80543C900

# BLEAG Token Address
# TODO: Update with your deployed BLEAG token address
# If not set, the app will use a placeholder address
VITE_BLEAG_TOKEN_ADDRESS=0x1234567890123456789012345678901234567890

# Legacy Support (optional - uses PredictionContract if not set)
VITE_MATCH_MANAGER_ADDRESS=0x448bF9Fe833AE50a70530F78aCE71bb80543C900

# ============================================
# API Configuration
# ============================================
VITE_API_BASE_URL=https://soccerleague.vercel.app
VITE_API_FOOTBALL_KEY=your-api-football-key
VITE_API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# ============================================
# Oracle Service (Optional - for backend oracle)
# ============================================
VITE_ORACLE_PRIVATE_KEY=
VITE_ORACLE_SERVICE_URL=http://localhost:3002

# ============================================
# Analytics (Optional)
# ============================================
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_DEBUG_MODE=false
