# BaseLeague Environment Variables

# App Configuration
VITE_APP_NAME=BaseLeague
VITE_APP_VERSION=1.0.0
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# Wallet Connection (Required for production)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here
VITE_CHAIN_ID=84532
VITE_RPC_URL=https://sepolia.base.org

# Smart Contracts (Required for production - Replace with actual deployed addresses)
VITE_BLEAG_TOKEN_ADDRESS=0x1234567890123456789012345678901234567890
VITE_MATCH_MANAGER_ADDRESS=0x1234567890123456789012345678901234567890

# API Configuration
VITE_API_BASE_URL=https://baseleague.vercel.app
VITE_API_FOOTBALL_KEY=your_football_api_key_here
VITE_API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# Oracle Service
VITE_ORACLE_PRIVATE_KEY=your_oracle_private_key_here
VITE_ORACLE_SERVICE_URL=http://localhost:3002

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_DEBUG_MODE=true
