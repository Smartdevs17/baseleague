# BaseLeague Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# WALLET CONNECTION
# =============================================================================
# Get your Project ID from https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# =============================================================================
# SMART CONTRACTS
# =============================================================================
# BLEAG Token Contract Address (ERC20 token for staking)
VITE_BLEAG_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# Match Manager Contract Address (main contract for matches)
VITE_MATCH_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# BLOCKCHAIN NETWORK
# =============================================================================
# Network configuration (84532 for base-sepolia testnet, 8453 for base mainnet)
VITE_CHAIN_ID=84532

# RPC URL for the blockchain network
VITE_RPC_URL=https://sepolia.base.org

# =============================================================================
# BACKEND API
# =============================================================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:3001/api

# API-Football configuration for live match data
VITE_API_FOOTBALL_KEY=your_api_football_key_here
VITE_API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name and version
VITE_APP_NAME=BaseLeague
VITE_APP_VERSION=1.0.0

# Development settings
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# =============================================================================
# ORACLE SERVICE
# =============================================================================
# Oracle wallet private key (for automated match settlement)
# WARNING: Keep this secure and never commit to version control
VITE_ORACLE_PRIVATE_KEY=your_oracle_private_key_here

# Oracle service endpoint
VITE_ORACLE_SERVICE_URL=http://localhost:3002

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics tracking ID (optional)
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_DEBUG_MODE=false
