{
	"name": "soccerleague-contracts",
	"version": "1.0.0",
	"description": "Smart contracts for SoccerLeague prediction market with Chainlink Functions oracle integration",
	"main": "index.js",
	"scripts": {
		"compile": "hardhat compile",
		"test": "hardhat test",
		"test:coverage": "hardhat coverage",
		"deploy:base-sepolia": "hardhat run scripts/deploy-and-save.ts --network base-sepolia",
		"deploy:sepolia": "hardhat run scripts/deploy-and-save.ts --network sepolia",
		"deploy:local": "hardhat run scripts/deploy.ts --network localhost",
		"test:live": "hardhat run scripts/test-live.ts --network base-sepolia",
		"test:flow": "hardhat run scripts/test-full-flow.ts --network base-sepolia",
		"request:result": "hardhat run scripts/request-result.ts --network sepolia",
		"verify:auth": "hardhat run scripts/verify-authorization.ts --network celo-sepolia",
		"test:rpc": "ts-node scripts/test-rpc.ts",
		"set:subscription": "hardhat run scripts/set-subscription.ts --network sepolia",
		"check:subscription": "hardhat run scripts/check-subscription.ts --network sepolia",
		"check:result": "hardhat run scripts/check-result.ts --network sepolia",
		"migrate:alfajores": "hardhat run scripts/migrate-to-alfajores.ts --network celo-alfajores",
		"set:subscription:alfajores": "hardhat run scripts/set-subscription-alfajores.ts --network celo-alfajores",
		"request:result:alfajores": "hardhat run scripts/request-result-alfajores.ts --network celo-alfajores",
		"check:result:alfajores": "hardhat run scripts/check-result-alfajores.ts --network celo-alfajores",
		"test:complete": "hardhat run scripts/test-complete-flow.ts --network sepolia",
		"verify": "hardhat verify",
		"node": "hardhat node",
		"clean": "hardhat clean",
		"lint": "solhint 'contracts/**/*.sol'",
		"lint:fix": "solhint 'contracts/**/*.sol' --fix"
	},
	"keywords": [
		"solidity",
		"ethereum",
		"smart-contracts",
		"chainlink",
		"celo",
		"prediction-market"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@chainlink/contracts": "^1.5.0",
		"@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
		"@nomicfoundation/hardhat-ethers": "^3.0.0",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.0",
		"@nomicfoundation/hardhat-toolbox": "^4.0.0",
		"@nomicfoundation/hardhat-verify": "^2.0.0",
		"@typechain/ethers-v6": "^0.5.0",
		"@typechain/hardhat": "^9.0.0",
		"@types/node": "^20.0.0",
		"chai": "^4.3.0",
		"dotenv": "^16.4.5",
		"ethers": "^6.13.0",
		"hardhat": "^2.22.0",
		"hardhat-gas-reporter": "^1.0.10",
		"solhint": "^4.0.0",
		"solidity-coverage": "^0.8.11",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@openzeppelin/contracts": "^5.4.0"
	}
}
